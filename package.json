{
  "name": "ts-autoreload",
  "version": "1.0.0",
  "description": "",
  "main": "build/start.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/start.js",
    "start:attach": "node --inspect=5858 -r ts-node/register src/start.ts",
    "start:dev": "./node_modules/nodemon/bin/nodemon.js",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "Hisyam",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "express": "^4.17.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
